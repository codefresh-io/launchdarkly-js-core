{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "target": "ES2017",
    "lib": ["ES2020"],
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "stripInternal": true,
    "composite": true
  },
  "exclude": ["**/*.test.ts", "dist", "node_modules", "__tests__"]
}

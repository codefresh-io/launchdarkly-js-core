{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "target": "ES2020",
    "lib": ["es6", "DOM"],
    "module": "ES6",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "dist", "node_modules", "__tests__"]
}
